
@model MovieTickets.Domain.Order
<div class="eden" style="color:white;background-color: rgba(110, 7, 10, 0.86)">

<div class="container">

    <p style="margin-left:500px">
        <a class="btn btn-warning">@Model.User.UserName</a>
    </p>

    @for (int i = 0; i < Model.MovieInOrders.Count(); i++)
    {
        var item = Model.MovieInOrders.ElementAt(i).OrderedMovie;

        if (i % 3 == 0)
        {
            @:<div class="row">
        }

                  <div class="col-md-3 m-4">
                      <div class="card rounded" style="width: 18rem; height: 34rem; border:double; color:#160080; border-color:#8368D5; ">
                          <img class="card-img-top" src="@item.Image" style="width: 260px; margin-top: 8px; height: 318px; margin-left:13px;" alt="Image for product!" />

                          <div class="card-body" style="text-align:center">
                              <h5 class="card-title">@item.Name</h5>



                              <h4>Price: $@item.Price</h4>
                             
                              <br />
                          </div>

                          <div class="card-footer">


                              <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Details</a>


                          </div>
                      </div>

                  </div>

            if (i % 3 == 2)
            {
            @:</div>
            }

    }
</div>
</div>